{
  "manifest_version": 2,

  "name": "Multiple Word Highlighter",
  "description": "Choose your words and choose your color then highlight!",  
  "version": "1.0",

  "permissions": [
    "tabs", "<all_urls>"
  ],

  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "js":["findAndReplaceDOMText.js"]
    } 	 
  ],

  "browser_action": {
    "default_popup": "popup.html"
  }

}   
